<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
            android:id="@+id/brand_container_layout"
            android:layout_width="match_parent" android:layout_height="@dimen/banner_height"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/bannerBackground"
            android:padding="@dimen/banner_padding">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_banner_logo_white"
                android:layout_gravity="center"
        />

    </FrameLayout>

    <com.worldpay.access.checkout.views.PANLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/panView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/brand_container_layout"
            android:layout_marginTop="25dp"
    />

    <com.worldpay.access.checkout.views.CardExpiryTextLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/card_expiry_hint"
            android:ems="10"
            android:id="@+id/cardExpiryText"
            app:layout_constraintStart_toStartOf="@+id/panView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/panView"/>

    <com.worldpay.access.checkout.views.CardCVVText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/card_cvv_hint"
            android:ems="4"
            android:id="@+id/cardCVVText"
            android:layout_marginTop="32dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/panView"
            app:layout_constraintStart_toEndOf="@+id/cardExpiryText"
            android:imeOptions="actionDone|flagNoFullscreen"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="@string/submit_text"
            android:enabled="false"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/panView"
            app:layout_constraintStart_toEndOf="@+id/cardCVVText" android:layout_marginStart="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>